{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "script"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "no-undef": "error"
  },
  "globals": {
    "require": "readonly",
    "module": "readonly",
    "exports": "readonly",
    "process": "readonly",
    "__dirname": "readonly",
    "jest": "readonly",
    "describe": "readonly",
    "it": "readonly",
    "test": "readonly",
    "expect": "readonly",
    "beforeEach": "readonly",
    "afterEach": "readonly",
    "global": "readonly"
  },
  "overrides": [
    {
      "files": ["**/*.test.js", "jest.setup.js", "src/**/__mocks__/**"],
      "env": {
        "jest": true,
        "node": true
      }
    },
    {
      "files": ["src/**/*.js", "src/**/**/*.js"],
      "env": {
        "node": true
      }
    }
  ]
}
